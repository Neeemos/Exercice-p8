{% extends 'base.html.twig' %}

{% block title %}Ajouter une voiture - {{ parent() }}{% endblock %}

{% block body %}
<section id="add">
    <a href="{{ path('app_home') }}">‚Üê Retour</a>
    <h1>Ajouter une voiture</h1>
    {{ form_start(form) }}

    <div class="input">
        {{ form_row(form.name) }}
    </div>
    <div class="input">
        {{ form_row(form.description) }}
    </div>
    <div class="flex-input">
        <div class="input">
            {{ form_row(form.month_price) }}
        </div>
        <div class="input">
            {{ form_row(form.day_price) }}
        </div>
    </div>
    <div class="flex-input">
        <div class="input">
            {{ form_row(form.seat_count) }}
        </div>
        <div class="input">
            {{ form_row(form.transmission) }}
        </div>
    </div>
    
    <button class="btn-add">Ajouter</button>
    {{ form_end(form) }}
</section>
{% endblock %}
